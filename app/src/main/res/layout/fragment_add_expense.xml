<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddExpense"
    android:background="@color/light_green"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add an expense"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias=".1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlineBox"
        android:layout_margin="@dimen/_10sdp"

        android:autofillHints="name"
        android:hint="Expense name"

        app:shapeAppearance="@style/Rounded"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".3"

        app:errorEnabled="true"
        app:boxStrokeErrorColor="@color/red"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/forest_green"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/OutlineBox"
        android:layout_margin="@dimen/_10sdp"

        android:hint="Type the amount"

        app:shapeAppearance="@style/Rounded"
        app:layout_constraintTop_toBottomOf="@id/et_layout_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:errorEnabled="true"
        app:boxStrokeErrorColor="@color/red"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/forest_green"
            android:inputType="numberDecimal"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_layout_date"
        style="@style/OutlineBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"

        android:hint="Pick a Date"

        app:boxStrokeErrorColor="@color/red"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_calendar_month_24"

        android:clickable="true"
        app:errorEnabled="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_layout_amount"
        app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"

            android:inputType="none"
            android:textColor="@color/forest_green" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Add Expense"

        app:cornerRadius="@dimen/_10sdp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:elevation="@dimen/_8sdp"
        android:maxLength="30"

        android:textColor="@color/white"
        android:backgroundTint="@color/musgo_green"

        app:layout_constraintVertical_bias=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>